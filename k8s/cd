pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: sdk
            image: ubuntu
            command:
            - cat
            tty: true
        '''
    }
  }
  environment {
        PROJECT_ID = 'mostafa-ashour-project'
    	CLUSTER_NAME = 'primary'
   	 LOCATION = 'us-central1-a'
   	 CREDENTIALS_ID ='mostafa-ashour-project'	
    }
  stages {
    stage('Deploy to K8s') {
      steps {
        container('sdk') {
          sh 'sudo apt install kubectl'
         
                echo "Deployment started ..."
                sh 'sudo apt install kubctl'

                sh "sed -i 's/pipeline:latest/py-app:${env.BUILD_ID}:${env.BUILD_ID}/g' k8s/app/python-deploy.yaml"
                step([$class: 'KubernetesEngineBuilder', \
                  projectId: env.PROJECT_ID, \
                  clusterName: env.CLUSTER_NAME, \
                  location: env.LOCATION, \
                  manifestPattern: 'k8s/app/python-deploy.yaml', \
                  credentialsId: env.CREDENTIALS_ID, \
                  verifyDeployments: true])

        }
      }
    }
  }
}


